<div class="container">

  <div class="banner-payment" style="background-image: linear-gradient(rgba(0, 0, 0, 0.66),rgba(0, 0, 0, 0)), url(<%= cl_image_path (@order.showtime.movie.photos.first.key), gravity: "north" %>);"></div>

    <div>
      <h2><%= @order.showtime.movie.title %></h2>
      <p><%= @order.showtime.theater.name %></p>
      <p></i><%= @order.showtime.start_hour.strftime("%Hh%M") %></p>
      <p><%= (@order.amount / @order.showtime.price_cents).to_i %> places</p>
      <p><%= (@order.amount / 100).round(2) %> â‚¬</p>
    </div>

  <br>

  <div id="card-element">
    <!-- Elements will create input elements here -->
  </div>
  <!-- We'll put the error messages in this element -->
  <div id="card-errors" role="alert"></div>

  <div class="payment-center">
  <button id="submit" class = "btn-primary book-button">Pay</button>
  </div>

  <%= hidden_field_tag 'payment_intent', @order.payment_intent %>
  <%= hidden_field_tag 'order_id', @order.id %>

</div>

<script src="https://js.stripe.com/v3/"></script>
