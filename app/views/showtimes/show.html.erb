<div class="showtime-show-infos">
  <div class="theater-photo">
    <%= cl_image_tag @showtime.theater.photo.key, width: 150, height: 225, crop: "fill" %>
  </div>
  <div class="showtime-description">
    <p class="showtime-title"><%= @showtime.theater.name %></p>
    <div class="showtime-distance">
      <i class="far fa-compass">500m</i>
    </div>
    <p class="showtime-show-hour"><i class="fas fa-film"></i><%= @showtime.start_hour.strftime("%Hh%M") %></p>
    <div class="showtime-price">
      <p><del><%= @showtime.initial_price %>€</del>
      <%= @showtime.price %>€</p>
    </div>
    <a class="btn btn-flat-showtime-show" href="#">Book now</a>

  </div>
</div>

<div class="showtime-movie">
  <div class="flex">
    <div class="s-movie-photo">
      <%= cl_image_tag @showtime.movie.photos.first.key, width: 100, height: 150, crop: "fill" %>
    </div>
    <div>
      <p><%= @showtime.movie.title %></p>
      <p>Réalisateur : <%= @showtime.movie.director %></p>
      <p>Casting : <%= @showtime.movie.cast %></p>
    </div>
  </div>
  <p><%= @showtime.movie.rating %></p>
  <p><%= @showtime.movie.description %></p>
</div>

Autres séances

<div class="other-showtimes">
  <% @theaters.each do |theater| %>
    <% if theater.showtimes.where(movie: @showtime.movie).count > 0 %>
      <%= theater.name %>
      <% theater.showtimes.where(movie: @showtime.movie).each do |showtime| %>

        <div class="flex-item">
          <span class="seats"><%= showtime.empty_seats %></span> fauteuils
        </div>

        <div class="flex-item">
          <h5><%= showtime.start_hour.strftime("%Hh%M") %></h5>
        </div>

        <div class="flex-item">
          <p>
          <span><del><%= showtime.initial_price %>€</del></span></p>
          <span><%= showtime.price %> €</span>
          <p></i><%= (theater.distance_to([session[:latitude], session[:longitude]])).round(1)%>km</p>
        </div>

        <%= showtime.start_hour.strftime("%Hh%M") %>
      <% end %>
    <% end %>
  <% end %>
</div>

