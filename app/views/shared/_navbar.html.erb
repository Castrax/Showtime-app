<div class="container">
  <div class="navbar navbar-expand-sm navbar-light">
    <% if action_name == "show" %>
      <%= link_to movies_path do %>
        <i class="fas fa-arrow-alt-circle-left" style="font-size: 3rem;"></i>
      <% end %>
    <% end %>
    <% if params[:lng].present? && params[:lat].present? %>
      <p><%= @geolocation.suburb %> - <%= @geolocation.city %></p>
    <% end %>
    <% if action_name == "show" %>
    <img class="avatar-index dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/castrax" />
    <% else %>
    <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/castrax" />
    <% end %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <a class="dropdown-item" href="#">Home</a>
      <a class="dropdown-item" href="#">Favorite movies</a>
    </div>
  </div>
</div>

