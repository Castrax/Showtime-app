<% @movies.each do |movie| %>
  <h2><%= movie.category %></h2>
  <%= link_to movie_path(movie) do %>
    <div class="card-trip">
      <% if movie.photos.attached? %>
        <%= cl_image_tag movie.photos.first.key, width: 304, height: 304, crop: :thumb, gravity: :face %>
      <% else %>
        <%= cl_image_tag("unknown_mn7pzj.png", :width=>304, :crop=>"scale") %>
      <% end %>
      <div class="card-trip-infos">
        <div class="list-group">
            <small>
              <% count = 0 %>
              <% 5.times do %>
                <% if movie.rating.round > count %>
                  <i class="fas fa-star"></i>
                <% else %>
                  <i class="far fa-star"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
        </div>
        <p class="card-trip-pricing">From <%= movie.showtimes.map { |showtime| showtime.price_per_seat }.min %> â‚¬</p>
      </div>
    </div>
  <% end %>
<% end %>

